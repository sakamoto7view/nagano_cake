 <%= render "layouts/header" %>

<section class="hero is-success">
  <div class="hero-body">
    <div class="container">
      <div class="row">
        <div class="col-lg-2">
          <div class="genre_style">
            <div class="genre_title">
              <h4>ジャンル検索</h4>
            </div>
            <if genre.status == true>
            <div class="genre_contents">
              <% @genres.each do |genre| %> <!-- https://web-camp.io/magazine/archives/18333 -->
                <div class="genre-list">
                  <%= link_to root_path(genre: genre.id) do %>
                    <%= genre.name %>
                  <% end %>
                </div>
              <% end %>
            </div>
          </div>
        </div>

        <div class="col-lg-10">
          <h2 class="title">商品一覧</h2> <h4>全<%#= items.count %>件</h4>
          
          <div class="row">
            <div class="col-lg-12">
              <section class="section">
                <div class="list-wrap">
                  <% @items.each do |item| %>
                    <div class="item-box">
                      <%= link_to item_path(item) do %>
                        <%= attachment_image_tag item, :image, :fill, 150, 110, format: 'jpeg' %>
                      <% end %>
                        <div class="name">
                          <span class="item-name"><strong>商品名</strong>　<%= item.name %></span>
                        </div>
                        <div class="price">
                          <span class="item-price"><strong>￥</strong>　<%= ((item.price * 1.1).round(2)).ceil %></span>
                        </div>
                    </div>
                  <% end %>
                </div>
              </section>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

