<%= render "layouts/adminheader" %>

<div class="container">
  <div class="row">
    <div class="col-lg-2">
      <div style="background-color:#EAEEEF; width:250px; padding:1">
        <div class="text-center">
  　　  　   <h4><%= @customer.last_name %><%= @customer.first_name %>さんの会員情報編集</h4>
        </div>
      </div>
    </div>
    <div class="col-lg-10">
    </div>
  </div>

    <%= form_with model:@customer, url:"/admin/customers/#{@customer.id}", local:true, method: :patch do |f| %>
      <form class="form-horizontal">
        <div class="form-group">
          <div class="row">
            <label class="col-lg-2 control-label" for="custmer_id">会員ID</label>
            <div class="col-lg-5">
              <%= @customer.id %>
            </div>
            <div class="col-lg-5">
            </div>
          </div>
        </div>
      	<div class="form-group">
      	  <div class="row">
            <label class="col-lg-2 control-label" for="name">氏名</label>
            <div class="col-lg-2">
              <%= f.text_field :last_name, autofocus: true %>
            </div>
            <div class="col-lg-2">
                <%= f.text_field :first_name, autofocus: true %>
            </div>
            <div class="col-lg-6">
            </div>
          </div>
        </div>

        <div class="form-group">
          <div class="row">
            <label class="col-lg-2 control-label" for="name_kana">フリガナ</label>
            <div class="col-lg-2">
              <%= f.text_field :last_name_kana, autofocus: true %>
            </div>
            <div class="col-lg-2">
              <%= f.text_field :first_name_kana, autofocus: true %>
            </div>
            <div class="col-lg-6">
            </div>
          </div>
        </div>

        <div class="form-group">
          <div class="row">
            <label class="col-lg-2 control-label" for="postcode">郵便番号(ハイフンなし)</label>
            <div class="col-lg-5">
              <%= f.text_field :postal_code, autofocus: true %>
            </div>
            <div class="col-lg-5">
            </div>
          </div>
        </div>

        <div class="form-group">
          <div class="row">
            <label class="col-lg-2 control-label" for="address">住所</label>
            <div class="col-lg-10">
             <%= f.text_field :address, autofocus: true %>
            </div>
          </div>
        </div>

        <div class="form-group">
          <div class="row">
            <label class="col-lg-2 control-label" for="phone_number">電話番号(ハイフンなし)</label>
            <div class="col-lg-5">
              <%= f.number_field :telephone_number, autofocus: true %>
            </div>
          </div>
        </div>

        <div class="form-group">
          <div class="row">
            <label class="col-lg-2 control-label" for="email">メールアドレス</label>
            <div class="col-lg-5">
              <%= f.text_field :email, autofocus: true %>
            </div>
            <div class="col-lg-5">
            </div>
          </div>
        </div>

        <div class="form-group">
          <div class="row">
            <label class="col-lg-2 control-label" for="email">会員ステータス</label>
            <div class="col-sm-5">
              <%# if @customer.is_deleted? %>
                 <%#= link_to withdrawl_customer_path(@customer), method: :patch do %>
                    <!-- span class="btn btn-info">会員にする</span -->
                 <%# end %>
              <%# else %>
                 <%#= link_to withdrawl_customer_path(@customer), method: :patch, data: { confirm: '本当に退会させますか？' } do %>
                      <!-- span class="btn btn-danger">退会させる</span -->
                 <%# end %>
              <%# end %>
              <%#= form_with url:withdrawl_customer_path(@customer.id), local:true, method: :patch do |f| %>
                <%= f.radio_button :is_deleted, :Available %> <!--https://techacademy.jp/magazine/22208 -->
                <%= f.label :is_deleted, "有効", {value: :true, style: "display: inline-block;"} %>
                <%= f.radio_button :is_deleted, :Invalid %>
                <%= f.label :is_deleted, "退会済み", {value: :false, style: "display: inline-block;"} %>
              <%# end %>
              <!-- % @customer.is_deleted each do |is_deleted| % -->  <!-- https://qiita.com/ozackiee/items/17b91e26fad58e147f2e -->
              <!-- %= f.label t("enums.customer.is_deleted.#{rate[0]}") % -->
              <!-- %= f.radio_button :is_deleted, rate[0] % -->
            </div>
            <div class="col-lg-5">
            </div>
          </div>
        </div>

        <div class="row">
          <div class="col-lg-2">
            <div class="Update">
              <%= f.submit "変更を保存する" %>
            </div>
          </div>
          <div class="col-lg-10">
          </div>
        </div>
      </form>
    <% end %>

  </div>
</div>



