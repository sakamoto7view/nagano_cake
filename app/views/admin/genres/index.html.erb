<%= render "layouts/adminheader" %>

<div class="container">
  <div class="row">
    <div class="col-lg-2">
      <div style="background-color:#EAEEEF; width:180px; padding:1px" >
        <div class="text-center">
          <h4>ジャンル一覧・追加</h4>
        </div>
      </div>
    </div>
    <div class="col-lg-10">
    </div>
  </div>

  
  <div class="row">
    <%= form_with model: @genre, url: admin_genres_path, local: true do |f| %>
  	  <div class="form-group">
        <label class="col-lg-1 control-label" for="name">ジャンル</label>
        <div class="col-lg-2">
          <%= f.text_field :name, autofocus: true %>
        </div>
        <div class="col-lg-2">
          <%= f.radio_button :is_active, :true %> <!--https://techacademy.jp/magazine/22208 -->
          <%= f.label :is_active, "有効", {value: :true, style: "display: inline-block;"} %>
          <%= f.radio_button :is_active, :false %>
          <%= f.label :is_active, "無効", {value: :false, style: "display: inline-block;"} %>
        </div>
        <div class="col-lg-2">
          <div class="actions">
            <%= f.submit "追加", class: "navbar-item button is-warning is-light"  %>
          </div>
        </div>
        <div class="col-lg-5">
        </div>
      </div>
    <% end %>
  </div>
  

  

  <div class="row">
    <div class="col-lg-6">
      <table class="table">
        <thead>
          <tr>
            <th>ジャンル</th>
            <th>状態</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @genres.each do |genre| %>
          <tr>
            <td><%= genre.name %></td>
            <td><%= genre.is_active %></td>
            <td>
    	        <%= link_to  edit_admin_genre_path(genre.id) do %>
                <button class="btn btn-info">編集する</button>
              <% end %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <div class="col-lg-6">
    </div>
  </div>
</div>