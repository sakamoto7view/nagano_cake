<%= render "layouts/adminheader" %>

<div class="container">
  <div class="row">
    <div class="col-lg-2">
      <div style="background-color:#EAEEEF; width:140px; padding:1px" >
        <div class="text-center">
          <h4>商品一覧</h4>
        </div>
      </div>
    </div>
    <div class="col-lg-8">
    </div>
    <div class="col-lg-2">
      <%= link_to "＋新規登録", '/admin/items/new', class: "navbar-item button is-warning is-light" %>
    </div>
  </div>

  <div class="row">
    <div class="col-lg-1">
    </div>
    <div class="col-lg-10">
      <table class="table">
        <thead>
          <tr>
            <th>商品ID</th>
            <th>商品名</th>
            <th>税抜価格</th>
            <th>ジャンル</th>
            <th>ステータス</th>
          </tr>
        </thead>

        <tbody>
          <% @items.each do |item| %>
            <tr>
              <td><%= item.id %></td>
              <td><%= link_to item.name, admin_item_path(item.id) %></td>
              <td><%= item.price %></td>
              <td><%= item.genre.name %></td>
              <td><% if item.is_active? %>
                    <p>販売中</p>
                  <% else %>
                    <p>販売中止</p>
                  <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <div class="col-lg-1">
    </div>
  </div>
</div>