 <%= render "layouts/header" %>


<div class="container">
  <div class="row">
    <div class="col-lg-2">
      <div style="background-color:#EAEEEF; width:150px; padding:0.1px" >
        <div class="text-center">
         <h5>配送先登録/一覧</h5>
        </div>
      </div>
    </div>
    <div class="col-lg-10">
    </div>
  </div>

  <%= form_with model:@address, local:true do |f| %>
    <form class="form-horizontal">
    	<div class="form-group">
    	  <div class="row">
          <label class="col-lg-2 control-label" for="postal_code">郵便番号(ハイフンなし)</label>
          <div class="col-lg-2">
            <%= f.text_field :postal_code, autofocus: true %>
          </div>
          <div class="col-lg-8">
          </div>
        </div>
      </div>

      <div class="form-group">
        <div class="row">
          <label class="col-lg-2 control-label" for="address">住所</label>
          <div class="col-lg-6">
            <%= f.text_field :address, autofocus: true %>
          </div>
          <div class="col-lg-4">
          </div>
        </div>
      </div>

      <div class="form-group">
        <div class="row">
          <label class="col-lg-2 control-label" for="name">宛名</label>
          <div class="col-lg-2">
            <%= f.text_field :name, autofocus: true %>
          </div>
          <div class="col-lg-3">
          </div>
          <div class="col-lg-3">
            <div class="actions">
              <%= f.submit "登録する" %>
            </div>
            <div class="col-lg-2">
          </div>
        </div>
      </div>
    </form>
  <% end %>

  <div class="row">
    <div class="col-lg-8">
      <table class="table table-bordered">
        <thead>
      		<tr>
      			<th>郵便番号</th>
      			<th>住所</th>
      			<th>宛名</th>
      			<th></th>
      		</tr>
      	</thead>
        <tbody>
          <% @addresses.each do |address| %>
          <tr>
      	    <td><%= address.postal_code %></td>
      	    <td><%= address.address %></td>
            <td><%= address.name %></td>
      			<td>
      			  <form class="form-horizontal">
        	      <div class="form-group">
        	          <%= link_to edit_address_path(address.id) do %>
                    　<button class="btn btn-info">編集する</button>
                  <% end %>
                  
                    <%= link_to address_path(address), method: :delete do %>
                    　<button class="btn btn-info">削除する</button>
                  <% end %>
                </div>
              </form>
      			</td>
      		</tr>
      		<% end %>
      	</tbody>
      </table>
    </div>
    <div class="col-lg-4">
    </div>
  </div>
</div>