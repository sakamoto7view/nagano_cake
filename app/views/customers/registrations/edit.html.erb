 <%= render "layouts/header" %>

<h2>Edit <%= resource_name.to_s.humanize %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <form class="form-horizontal">
  	<div class="form-group">
      <label class="col-sm-2 control-label" for="name">名前</label>
        <div class="col-sm-5">
          <%= f.label :last_name,"(姓)" %> <%= f.text_field :last_name, autofocus: true %>
        </div>
        <div class="col-sm-5">
            <%= f.label :first_name,"(名)" %> <%= f.text_field :first_name, autofocus: true %>
        </div>
    </div>
    
    <div class="form-group">
      <label class="col-sm-2 control-label" for="name_kana">フリガナ</label>
        <div class="col-sm-5">
          <%= f.label :last_name_kana,"(セイ)" %> <%= f.text_field :last_name_kana, autofocus: true %>
        </div>
        <div class="col-sm-5">
          <%= f.label :first_name_kana,"(メイ)" %> <%= f.text_field :first_name_kana, autofocus: true %>
        </div>
    </div>
  
    <div class="form-group">
      <label class="col-sm-2 control-label" for="email">メールアドレス</label>
        <div class="col-sm-5">
          <%= f.text_field :email, autofocus: true %>
        </div>
        <div class="col-sm-5">
        </div>
    </div>
  
    <div class="form-group">
      <label class="col-sm-2 control-label" for="postcode">郵便番号(ハイフンなし)</label>
        <div class="col-sm-5">
          <%= f.text_field :postal_code, autofocus: true %>
        </div>
        <div class="col-sm-5">
        </div>
    </div>
  
    <div class="form-group">
      <label class="col-sm-2 control-label" for="address">住所</label>
        <div class="col-sm-10">
         <%= f.text_field :address, autofocus: true %>
        </div>
    </div>
  
    <div class="form-group">
      <label class="col-sm-2 control-label" for="phone_number">電話番号(ハイフンなし)</label>
        <div class="col-sm-5">
          <%= f.telephone_field :telephone_number, autofocus: true %>
        </div>
    </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

<div class="actions">
      <%= f.submit "Update" %>
    </div>
  
<% end %>

<h3>Cancel my account</h3>

<p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

<%= link_to "Back", :back %>
