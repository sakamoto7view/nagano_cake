   <%= render "layouts/header" %>

<div class="container">  <!-- この行を追加 -->
  <div class="row"> 
    <div class="col-lg-3">
      <h2 style="background-color:#EAEEEF; width:200px; padding:0px">
       <div class="text-center">
         新規会員登録
        </div>
      </h2>
    </div>
    <div class="col-lg-9">
    </div>
  </div>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  
  

  <form class="form-horizontal">
    <div class="row"> 
    	<div class="form-group">
      <label class="col-lg-3 control-label" for="name">名前</label>
        <div class="col-lg-3">
          <%= f.label :last_name,"(姓)" %> <%= f.text_field :last_name, autofocus: true %>
        </div>
        <div class="col-lg-3">
            <%= f.label :first_name,"(名)" %> <%= f.text_field :first_name, autofocus: true %>
        </div>
        <div class="col-lg-3">
        </div>
      </div>
    </div>
    <div class="row">
      <div class="form-group">
        <label class="col-lg-3 control-label" for="name_kana">フリガナ</label>
          <div class="col-lg-3">
            <%= f.label :last_name_kana,"(セイ)" %> <%= f.text_field :last_name_kana, autofocus: true %>
          </div>
          <div class="col-lg-3">
            <%= f.label :first_name_kana,"(メイ)" %> <%= f.text_field :first_name_kana, autofocus: true %>
          </div>
          <div class="col-lg-3">
        </div>
      </div>
    </div>
      
    <div class="row">
      <div class="form-group">
        <label class="col-lg-3 control-label" for="email">メールアドレス</label>
        <div class="col-lg-3">
          <%= f.text_field :email, autofocus: true %>
        </div>
        <div class="col-lg-6">
        </div>
      </div>
    </div>
    
    <div class="row">
      <div class="form-group">
        <label class="col-lg-3 control-label" for="postcode">郵便番号(ハイフンなし)</label>
        <div class="col-lg-3">
          <%= f.text_field :postal_code, autofocus: true %>
        </div>
        <div class="col-lg-6">
        </div>
      </div>
    </div>
    
    <div class="row">
      <div class="form-group">
        <label class="col-lg-3 control-label" for="address">住所</label>
        <div class="col-lg-6">
         <%= f.text_field :address, autofocus: true %>
        </div>
        <div class="col-lg-3">
        </div>
      </div>
    </div>
    
    <div class="row">
      <div class="form-group">
        <label class="col-lg-3 control-label" for="phone_number">電話番号(ハイフンなし)</label>
        <div class="col-lg-3">
          <%= f.telephone_field :telephone_number, autofocus: true %>
        </div>
        <div class="col-lg-6">
        </div>
      </div>
    </div>
    
    <div class="row">
      <div class="form-group">
        <label class="col-lg-3">
          <%= f.label :"パスワード" %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %>文字以上)</em>
          <% end %><br />
        </label>
        <div class="col-lg-3">
          <%= f.password_field :password, autocomplete: "new-password" %>
        </div>
        <div class="col-lg-6">
        </div>
      </div>
    </div>
  
    <div class="row">
      <div class="form-group">
        <label class="col-lg-3">
          <%= f.label :"パスワード(確認用)" %>
        </label>
        <div class="col-lg-3">
          <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
        </div>
        <div class="col-lg-6">
        </div>
      </div>  
    </div>
  
    <div class="row">
      <div class="form-group">
        <div class="col-lg-5">
        </div>
        <label class="col-lg-2">
          <div class="actions">
            <%= f.submit "新規登録" %>
          </div>
        </abel>
        <div class="col-lg-5">
        </div>
      </div>
    </div>  
  <% end %>
  </form>
    
    <%= render "devise/shared/links" %>
</div>



